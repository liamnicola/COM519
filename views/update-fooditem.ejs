<!DOCTYPE html>
<html lang="en">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" 
    rel="stylesheet" 
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" 
    crossorigin="anonymous">
    


    <body>
      <%- include('common/header'); -%>
      <div class="container">
        <h1 class="text-center">Update Food Items</h1>
        <div class="row justify-content-md-center">
          <div class="col-">
            <form method="POST">
              <div class="form-group">
                <label for="name">Food Item Name</label>
                <input
                  value="<%= fooditems.foodName %>"
                  type="text"
                  class="form-control"
                  id="foodName"
                  name="foodName"
                  placeholder="Enter Name"
                />

              
              </div>

              <div class="form-group">
                <label for="name">Calories</label>
                <input
                  value="<%= fooditems.calories %>"
                  type="integer"
                  class="form-control"
                  id="calories"
                  name="calories"
                />
              </div>

              <div class="form-group">
                <label for="name">Carbs</label>
                <input
                  value="<%= fooditems.carbs %>"
                  type="integer"
                  class="form-control"
                  id="carbs"
                  name="carbs"
                />
              </div>

              <div class="form-group">
                <label for="name">Fats</label>
                <input
                  value="<%= fooditems.fats %>"
                  type="integer"
                  class="form-control"
                  id="fats"
                  name="fats"
                />
              </div>

              <div class="form-group">
                <label for="name">Protein</label>
                <input
                  value="<%= fooditems.protein %>"
                  type="integer"
                  class="form-control"
                  id="protein"
                  name="protein"
                />
              </div>

              <button type="submit" class="btn btn-primary">Update</button>
              <a href="/fooditems" class="btn btn-secondary">Cancel</a>
            </form>
          </div>
        </div>
      </div>
      <%- include('common/footer'); -%>
    </body>
  </html>
</html>